{
    "name": "Scala",
    "image": "mcr.microsoft.com/devcontainers/base:trixie",
    "features": {
        "ghcr.io/devcontainers-extra/features/sbt-sdkman:2.0.16": {
            "version": "latest",
            "jdkVersion": "17",
            "jdkDistro": "tem"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "scalameta.metals",
                "scala-lang.scala"
            ]
        }
    },
    "postCreateCommand": "sbt update",
    "forwardPorts": [
        8080
    ],
    "remoteUser": "vscode",
    "hostRequirements": {
        "cpus": 4,
        "memory": "16gb",
        "storage": "32gb"
    }
}
